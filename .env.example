# Environment Variables Example
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knut4
DB_USER=knut4_user
DB_PASSWORD=knut4_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=86400000

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Frontend Configuration (when implemented)
REACT_APP_API_URL=http://localhost:8080

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for future email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/tmp/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/application.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_ENABLED=true

# Monitoring Configuration (for future implementation)
ACTUATOR_ENDPOINTS_ENABLED=true
METRICS_EXPORT_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=knut4
POSTGRES_VERSION=15-alpine
REDIS_VERSION=7-alpine