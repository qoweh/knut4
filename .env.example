#############################
# Root .env example for docker-compose
# Copy to .env and adjust as needed.
#############################

# DB
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=knut4
MYSQL_USER=app
MYSQL_PASSWORD=app

# Backend datasource override (optional)
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/knut4?useSSL=false&allowPublicKeyRetrieval=true&characterEncoding=UTF-8&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=app
SPRING_DATASOURCE_PASSWORD=app
SPRING_PROFILES_ACTIVE=prod

# LLM settings
APP_LLM_MODE=http               # http | stub
LLM_OPENAI_BASE_URL=http://gpt4all:4891/v1
LLM_MODEL=gpt4all

# Frontend runtime flag (non-build-time)
VITE_LLM_ENABLED=true

# (Optional) If exposing API behind different host for frontend
# VITE_API_BASE=http://localhost:8080
